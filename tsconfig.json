{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
     "baseUrl": "./", // <--- ADD THIS LINE
    "paths": {
      "@/*": [
        "src/*" // <--- CHANGE THIS TO "src/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}